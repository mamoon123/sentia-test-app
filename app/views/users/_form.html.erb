<div class="form-style">
  <%= form_with(model: user, local: true) do |f| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, "Name:", class: "col-md-3 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: 'Name', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :number, "Number:", class: "col-md-3 control-label" %>
      <div class="col-md-8">
        <%= f.number_field :number, class: "form-control", placeholder: 'Number', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description:", class: "col-md-3 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :description, class: "form-control", placeholder: 'Description', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, "Date:", class: "col-md-3 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :date, class: "form-control datepicker", placeholder: 'Date', 'data-provide' => 'datepicker', required: true %>
      </div>
    </div>
    <div class="form-group user-sbmt">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
    </div>  
   <% end %>
</div>   
